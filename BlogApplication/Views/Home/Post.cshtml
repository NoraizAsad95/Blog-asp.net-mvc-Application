@model BlogApplication.Context.Post
@{
    ViewBag.Title = "Post";
}



<h2>ADD Post</h2>

@using (Html.BeginForm("addPost", "Home", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            @Html.HiddenFor(x => x.PostId)
            <label>Title</label>
            @Html.TextBoxFor(x => x.Title, new {@class = "form-control" })
        </div>
        <div class="form-group">
            <label>Content</label>
            @Html.TextBoxFor(x => x.Content, new { style = "height:300px", @class = "form-control" })
        </div>
       
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Post</button>

        </div>
    </div>
}
